/**
 * Trenchbroom Qt Dynamic Stylesheet
 * Modified Fusion Theme
 */

QMainWindow#MapFrame {
    min-width: 1280px;
    min-height: 768px;
}

/* ---------------------------------------------------------------------------------- */
/* --- STATUSBAR--------------------------------------------------------------------- */
/* ---------------------------------------------------------------------------------- */

QStatusBar {
    margin-top: 2px;
    margin-bottom: 2px;
    padding-top: 2px;
    padding-bottom: 2px;
    border-top: 1px solid #MIDLIGHT_COLOR;
    background: #WINDOW_COLOR;
   /* min-height: 25px;*/
    background-color: #WINDOW_COLOR;
}

QWidget#StatusBarManager {
    margin-left: 0px;
}

QWidget#StatusBar_LeftLayout,
QWidget#StatusBar_CenterLayout,
QWidget#StatusBar_RightLayout {
/*    border: 1px solid yellow;*/
    text-align: center;
}


QWidget#StatusBarWidget {
/*   border: 1px solid cyan;*/
   color: #TEXT_COLOR;
   font-size: #UI_SMALL_FONT_SIZE;
   text-align: center;
}


/* ---------------------------------------------------------------------------------- */
/* --- LIST/TABLE ------------------------------------------------------------------- */
/* ---------------------------------------------------------------------------------- */

QHeaderView {
    background-color: #MIDLIGHT_COLOR;
    color: #HIGHLIGHTED_TEXT_COLOR;
    font-size: #UI_MID_FONT_SIZE;
    font-style: bold;
    min-height: 22px;
}

QHeaderView::section {
    border: 1px solid #DARK_COLOR;
    text-align: center;
}

QHeaderView:disabled {
    background-color: #DARK_COLOR;
}

QTableWidget {
    gridline-color: #MIDLIGHT_COLOR;
}


QWidget#TitleBar, QWidget#ClickableTitleBar, QWidget#CollapsibleTitleBar   {
    background-color: #MIDLIGHT_COLOR;
    border: 2px solid #DARK_COLOR;
    min-height: 22px;
    color: #HIGHLIGHTED_TEXT_COLOR;
    font-size: UI_MID_FONT_SIZE;
    font-style: bold;
}


/*QWidget#ClickableTitleBar  {*/
/*    background-color: #MIDLIGHT_COLOR;*/
/*    border: 2px solid #DARK_COLOR;*/
/*    min-height: 22px;*/
/*}*/


/*QWidget#CollapsibleTitleBar  {*/
/*    background-color: #MIDLIGHT_COLOR;*/
/*    border: 2px solid #DARK_COLOR;*/
/*    min-height: 22px;*/
/*}*/


QWidget#SubTitleBar {
    background-color: #DARK_COLOR;
    color: #TEXT_COLOR;
    min-height: 22px;
}


QLabel#CollapsibleTitleBar_m_stateText {
    font-size: #UI_TITLE_FONT_SIZE;
    color: #TEXT_COLOR;
    border: none;
    font-style: bold;
    margin: 0px;
    font-weight: 700;
    margin-left: 2px;
}

QLabel:hover#CollapsibleTitleBar_m_stateText {
    color: white;
    font-size: #UI_TITLE_FONT_SIZE;
    font-style: bold;
    font-weight: 700;
}

QLabel#CollapsibleTitleBar_m_titleText {
    margin-left: 30px;
}


/* ---------------------------------------------------------------------------------- */
/* --- QWidget ---------------------------------------------------------------------- */
/* ---------------------------------------------------------------------------------- */

QWidget::item:selected:active {
    border-radius: #BORDER_RADIUS;
    border-style: solid;
    background-color: #HIGHLIGHT_COLOR;
    border-color: #HIGHLIGHT_COLOR;
    color: #HIGHLIGHTED_TEXT_COLOR;
}

QWidget::item:selected:!active {
    border-radius: #BORDER_RADIUS;
    border-width: #BORDER_SIZE;
    border-style: solid;
    background-color: #DARK_HIGHLIGHT_COLOR;
    border-color: #DARK_HIGHLIGHT_COLOR;
    color: #HIGHLIGHTED_TEXT_COLOR;
}

QWidget#ImageListBoxItemRenderer_m_titleLabel {
    color: #HIGHLIGHTED_TEXT_COLOR;
    border: none;
}

QWidget#ImageListBoxItemRenderer_m_subtitleLabel {
    color: #TEXT_COLOR;
    font-size: #UI_SMALL_FONT_SIZE;
    border: none;
}

QWidget#LayerListBoxWidget_m_nameText {
    color: #HIGHLIGHTED_TEXT_COLOR;
    border: none;
}

QWidget#LayerListBoxWidget_m_infoText {
    color: #TEXT_COLOR;
    font-size: #UI_SMALL_FONT_SIZE;
    border: none;
}

/* ---------------------------------------------------------------------------------- */
/* --- SPLITTER --------------------------------------------------------------------- */
/* ---------------------------------------------------------------------------------- */

QSplitter {
    min-width: #MEDIUM_H_MARGIN;
    min-height: #MEDIUM_V_MARGIN;
    background-color: #DARK_COLOR;
}

/* ---------------------------------------------------------------------------------- */
/* --- CHECKBOX --------------------------------------------------------------------- */
/* ---------------------------------------------------------------------------------- */

QCheckBox#entityDefinition_checkboxWidget {
    margin-left: 16px;
}

QCheckBox#entityDefinition_groupCheckboxWidget {
    margin-left: 0px;
    color: #HIGHLIGHTED_TEXT_COLOR;
}

/* ---------------------------------------------------------------------------------- */
/* --- TEXT-EDIT -------------------------------------------------------------------- */
/* ---------------------------------------------------------------------------------- */

QTextEdit {
    border: none;
    background-color: #SHADOW_COLOR;
    padding: 2px;
    margin-top: 2px;
    margin-left: 0px;
    margin-bottom: 2px;
}

/* ---------------------------------------------------------------------------------- */
/* --- COMBO-BOX -------------------------------------------------------------------- */
/* ---------------------------------------------------------------------------------- */

QComboBox {
    min-height: 16px;
    min-width: 50px;
    padding-right: 8px;
    background-color: #MID_COLOR;
    border: 1px solid #MIDLIGHT_COLOR;
    border-radius: #BORDER_RADIUS;
}

QComboBox QAbstractItemView {
    padding: 0px;
    margin: 4px;
    border: 1px solid #MID_COLOR;
    border-radius: #BORDER_RADIUS;
    background-color: #DARK_COLOR;
}

QComboBox::item:selected:active {
    background-color:  #HIGHLIGHT_COLOR;
}

QComboBox::drop-down {
    padding-left: 2px;
    min-width: 14px;
    background-color: #MIDLIGHT_COLOR;
    border-left: none;
    border-right: 2px solid #MIDLIGHT_COLOR;
    border-bottom-right-radius: 2px;
    border-bottom-left-radius: 0px;
    border-top-right-radius: 2px;
    border-top-left-radius: 0px;

}

QComboBox::down-arrow {
    image: url(":down.svg");
    height: 14px;
    width: 14px;
}

QComboBox#TextureBrowser_smallComboBox {
    padding: 3px 3px 3px 2px;
    min-width: 60px;
    min-height: 18px;
}

/* ---------------------------------------------------------------------------------- */
/* --- SPINBOX ---------------------------------------------------------------------- */
/* ---------------------------------------------------------------------------------- */

QAbstractSpinBox {
    border: 1px solid #MIDLIGHT_COLOR;
    border-radius: 2px;
}

